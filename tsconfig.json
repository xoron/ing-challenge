{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "types": ["jest"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "target": "ES2015",
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./src/**/*.js"]
}
